{
	"root": true,

	"extends": "@ljharb",

	"rules": {
		"id-length": 0,
		"new-cap": [2, {
			"capIsNewExceptions": [
				"DeletePropertyOrThrow",
				"Get",
				"HasProperty",
				"LengthOfArrayLike",
				"Set",
				"ToObject",
				"ToString",
			]
		}],
		"no-magic-numbers": 0,
	},

	"overrides": [
		{
			"files": "test/**",
			"rules": {
				"max-len": 0,
			},
		},
	],
}
